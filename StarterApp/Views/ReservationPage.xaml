<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StarterApp.ViewModels"
             x:Class="StarterApp.Views.ReservationsPage"
             Title="My Session Reservations">

    <ContentPage.BindingContext>
        <viewmodels:ReservationsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Attendee Reservations" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding SpeakerReservations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Margin="0,5" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding ConferenceTitle}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding AttendeeName}" />
                                <Label Text="{Binding ReservedAt, StringFormat='Reserved At: {0:dd MMM yyyy HH:mm}'}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>